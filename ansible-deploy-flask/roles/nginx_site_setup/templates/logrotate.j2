 {{ app_logs_dir }}/*.log {
        rotate -1
        monthly
        missingok
        compress
        notifempty
        create 640 www-data www-data
        delaycompress
        sharedscripts
        postrotate
                if [ -f /var/run/nginx.pid ]; then
                        kill -USR1 `cat /var/run/nginx.pid`
                fi
        endscript
}